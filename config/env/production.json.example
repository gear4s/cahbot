{
    "server":        "openirc.snt.utwente.nl",
    "nick":          "cah",
    "setTopic":      true,
    "topicBase":     "|| This will be appended to the topic along with the game status.",
    "notifyUsers":   false,
    "startOnFirstJoin": true,
    "maxIdleRounds": 2,
    "timeLimit": 120,
    "voicePlayers": false,
    "pointLimit":    10,
    "exitOnError": false,
    "topic": {
        "position": "right",
        "separator": "::",
        "messages": {
            "on":  ["A game is running. Type !join to get in on it!", "bold.yellow"],
            "off": "",
            "winner": ["Reigning champion: <%= nick %>", "bold.yellow"]
        }
    },
    "connectCommands": [
        {
            "target": "",
            "message": ""
        }
    ],
    "joinCommands": {
        "#cah": [
            {
                "target": "",
                "message": ""
            }
        ]
    },
    "userJoinCommands": {
        "#cah": [
            {
                "target": "#cah",
                "message": "Hi <%= nick %>! Type !join to play"
            }
        ]
    },
    "clientOptions": {
        "userName":             "cah",
        "channels":             ["#cah"],
        "floodProtection":      true,
        "floodProtectionDelay": 1000
    },
    "beers": [ "Blue Moon", "Pabst Blue Ribbon", "Yuengling", "Stella Artois", 
               "Modelo", "Fat Tire Amber Ale", "Magic Hat", "Samuel Adams",
